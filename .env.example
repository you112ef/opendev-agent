# OpenDevAgent Environment Configuration
# Copy this file to .env and fill in your values

# ==================================================
# OpenRouter API Configuration
# ==================================================
# Get your API key from: https://openrouter.ai/keys
# Note: API keys are handled securely in the frontend and never stored
# OPENROUTER_API_KEY=sk-or-v1-...

# ==================================================
# Backend Configuration
# ==================================================
# Python environment
PYTHONUNBUFFERED=1
PYTHONPATH=/app
LOG_LEVEL=INFO

# Redis connection
REDIS_URL=redis://redis:6379

# ==================================================
# Frontend Configuration
# ==================================================
# API endpoint (adjust if deploying to production)
NEXT_PUBLIC_API_URL=http://localhost:8000

# Node environment
NODE_ENV=production

# ==================================================
# Docker & Sandbox Configuration
# ==================================================
# Sandbox execution limits
SANDBOX_TIMEOUT=300
SANDBOX_MEMORY_LIMIT=512m
SANDBOX_CPU_QUOTA=50000

# ==================================================
# Multi-Agent System Configuration
# ==================================================
# Model selection (OpenRouter model IDs)
ARCHITECT_MODEL=openai/gpt-4o
CODER_MODEL=anthropic/claude-3.5-sonnet
DEBUGGER_MODEL=anthropic/claude-3.5-sonnet
FALLBACK_MODEL=meta-llama/llama-3.1-70b

# ==================================================
# Security Configuration
# ==================================================
# CORS settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# API rate limiting
RATE_LIMIT_PER_MINUTE=60

# ==================================================
# Monitoring & Logging
# ==================================================
# Enable detailed logging
ENABLE_DEBUG_LOGS=false

# Log file path
LOG_FILE_PATH=/var/log/opendevagent/

# ==================================================
# Production Deployment (Optional)
# ==================================================
# Domain configuration
# DOMAIN=yourdomain.com
# SSL_ENABLED=true
# CERTBOT_EMAIL=your@email.com
